.reminder-container {
  padding: 30rpx;
}

.add-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.add-button image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.reminder-list {
  background: #fff;
  border-radius: 16rpx;
}

.reminder-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.medicine-info {
  margin-bottom: 20rpx;
}

.medicine-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.dosage {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.frequency {
  font-size: 28rpx;
  color: #666;
}

.time-list text {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.form-item input {
  border: 1rpx solid #eee;
  padding: 10rpx;
  border-radius: 8rpx;
}

.time-picker-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.save-btn {
  margin-top: 30rpx;
  background: #07c160;
  color: #fff;
}

.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 32rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.checkbox {
  margin-right: 20rpx;
}

.unchecked {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-dosage {
  font-size: 24rpx;
  color: #666;
}

.completed {
  text-decoration: line-through;
  opacity: 0.6;
}

.item-actions {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.action-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.thumbnail {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.edit-btn {
  padding: 12rpx 20rpx;
  background: rgba(255, 159, 67, 0.1);
  border-radius: 24rpx;
  color: #ff9f43;
  font-size: 24rpx;
}

.delete-btn {
  padding: 12rpx 20rpx;
  background: rgba(255, 59, 48, 0.1);
  border-radius: 24rpx;
  color: #ff3b30;
  font-size: 24rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

.item-main {
  flex: 1;
  display: flex;
  align-items: center;
}

.item-arrow {
  margin-left: 16rpx;
  color: #999;
}

/* 详情弹窗样式 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.detail-item {
  margin-bottom: 24rpx;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.detail-item .value {
  font-size: 32rpx;
  color: #333;
}

.detail-item .content {
  display: block;
  margin-top: 8rpx;
  line-height: 1.6;
  white-space: pre-wrap;
}

.medicine-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-top: 12rpx;
  background: #f5f5f5;
}
