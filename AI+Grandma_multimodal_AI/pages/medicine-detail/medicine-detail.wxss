.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.medicine-header {
  background: #fff;
  padding: 40rpx;
  text-align: center;
}

.medicine-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.medicine-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #07c160;
}

.translation-content,
.original-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.audio-control {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.audio-control image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.reminder-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
}
