.container {
  min-height: 100vh;
  background: #fafafa;
  padding: 32rpx;
}

/* 用户信息区域 */
.user-section {
  margin-bottom: 48rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.login-btn {
  width: 60%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff9f43;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.login-tip {
  font-size: 24rpx;
  color: #999;
}

.logout-btn {
  margin-left: auto;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 32rpx;
  font-size: 24rpx;
}

.logout-btn:active {
  opacity: 0.8;
}

/* 功能区域 */
.feature-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 扫描卡片 */
.feature-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.feature-card.scan {
  background: linear-gradient(135deg, #ff9f43, #ff7f50);
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  display: block;
}

.card-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.card-icon {
  width: 120rpx;
  height: 120rpx;
}

/* 功能网格 */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.grid-item {
  position: relative;
  overflow: hidden;
  transition: transform 0.2s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 16rpx;
}

.grid-item:active {
  transform: scale(0.98);
}

.favorites {
  background: #fff3e6;
}

.reminders {
  background: #ffe6e6;
}

.icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(255, 159, 67, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.grid-icon {
  width: 48rpx;
  height: 48rpx;
}

.grid-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

/* 使用指南 */
.guide-section {
  margin-top: 48rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.guide-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #ff9f43;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
}

.step-text {
  font-size: 28rpx;
  color: #666;
}

/* 测试按钮区域 */
.test-buttons {
  margin-top: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 24rpx;
}

.test-btn {
  background: linear-gradient(135deg, #ff9f43, #ff7f50);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 12rpx 24rpx;
  min-width: 160rpx;
  line-height: 1.5;
}

.test-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
