.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 32rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.favorite-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-content {
  margin-bottom: 24rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.item-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background: #f5f5f5;
}

.action-btn.play {
  background: #ff9f43;
  color: #fff;
}

.action-btn.delete {
  background: #f5f5f5;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 48rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.scan-btn {
  background: #07c160;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.medicine-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.description {
  font-size: 26rpx;
  color: #666;
  margin: 8rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.chat-messages {
  height: 300rpx;
  margin: 16rpx 0;
}

.message {
  padding: 16rpx;
  margin: 8rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.message.user {
  background: rgba(7, 193, 96, 0.1);
  color: #333;
}

.message.ai {
  background: #f5f5f5;
  color: #666;
}

.medicine-thumbnail {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #f5f5f5;
}

.detail-image {
  width: 100%;
  margin-bottom: 24rpx;
}

.full-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.medicine-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.item-main {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  overflow: hidden;
}
